<section data-section-id="{{ section.id }}" data-section-type="product" data-enable-history-state="true" itemscope itemtype="http://schema.org/Product" class="container m-0 mw-100 p-0 pt-3">
  {%- assign current_variant = product.selected_or_first_available_variant -%}
  {%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}

  <meta itemprop="name" content="{{ product.title }}{% unless product.has_only_default_variant %} - {{ current_variant.title }}{% endunless %}">
  <meta itemprop="url" content="{{ shop.url }}{{ current_variant.url }}">
  <meta itemprop="brand" content="{{ product.vendor }}">
  <meta itemprop="image" content="{{ featured_image | img_url: '600x600' }}">
  <meta itemprop="description" content="{{ product.description | strip_html | escape }}">

{% comment %} Mobile Product Title {% endcomment %}
  <div class="row d-md-none">
    <div class="col">
      <h3 class="font-weight-bold">{{ product.title }}</h3>
    </div>
  </div>
  
{% comment %} Mobile Product SKU {% endcomment %}
  <div class="row d-md-none">
    <div class="col">
      <h6 class="font-weight-bold">SKU: {{ current_variant.sku }}</h6>
    </div>
  </div>

  {% comment %} Main Content Row {% endcomment %}
  <div class="row pb-4 ">

    {% comment %} Main Column 1 {% endcomment %}
    <div class="col-xs-12 col-md-6 p-0">

      {% comment %} Product Image Carousel {% endcomment %}
      <div class="row pb-3">
        <div class="col">
          <div id="product-image-carousel" class="carousel slide">
            <div class="carousel-inner carousel-height bg-light border">

            {% comment %} for each image of a product, if it's not a More Info Image,
              add it to the image carousel. {% endcomment %}
              {% for image in product.images %}
                {% if image.alt contains 'isMoreInfo' %}
                {% else %}
                  <div class="carousel-item h-100 w-100
                      {% if forloop.index == 1 %}
                        active
                      {% endif %}">

                    {% comment %} if the image represents a youtube video,
                      embed the youtube video into the image carousel. {% endcomment %}
                    {% if image.alt contains 'youtube' %}
                      {% comment %} <div class="row h-100 w-100 align-items-center justify-content-center">
                        <div class="col">
                          <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="embed-responsive-item" src={{ image.alt }} allowfullscreen></iframe>
                          </div>
                        </div>
                      </div> {% endcomment %}
                      <a id="image-{{ forloop.index }}" class="d-block w-100 h-100"  href="{{ image.alt }}" data-featherlight="iframe" data-featherlight-iframe-width="640" data-featherlight-iframe-height="480" data-featherlight-iframe-frameborder="0" data-featherlight-iframe-allow="autoplay; encrypted-media" data-featherlight-iframe-allowfullscreen="true">
                        <div class="row h-100 w-100 justify-content-center align-items-center">
                          <div class="col-auto p-0">
                            <i class="fas fa-play-circle text-light fa-4x"></i>
                          </div>
                        </div>
                      </a>
                      <style>
                        #image-{{forloop.index}} {
                            height: 400px;
                            background-image: url("{{ image.src | img_url: '400x' }}");
                            background-repeat: no-repeat;
                            background-position: center;
                            background-size: contain;
                        }
                      </style>
                    {% else %}
                      <a id="image-{{ forloop.index }}" class="d-block w-100 h-100" href="#" data-product-single-thumbnail data-featherlight="#product-image-lightbox-{{forloop.index}}">
                      </a>
                      <div class="d-none">
                        <div id="product-image-lightbox-{{forloop.index}}">
                          {{ image | img_tag: image.alt, 'img-fluid', '1024x' }}
                        </div>
                      </div>
                      <style>
                        #image-{{forloop.index}} {
                            height: 400px;
                            background-image: url("{{ image.src | img_url: '400x' }}");
                            background-repeat: no-repeat;
                            background-position: center;
                            background-size: contain;
                        }
                      </style>
                    {% endif %}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#product-image-carousel" role="button" data-slide="prev">
              <i class="fas fa-chevron-circle-left fa-lg text-secondary"></i>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#product-image-carousel" role="button" data-slide="next">
              <i class="fas fa-chevron-circle-right fa-lg text-secondary"></i>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>

      {% comment %} Image Carousel Thumbnails {% endcomment %}
      <div class="row pb-3">

      {% comment %} for each image in a product, if it isn't a More Info Image,
        add it as a navigation indicator for the main image carousel. {% endcomment %}
        {% for image in product.images %}
          {% if image.alt contains 'isMoreInfo' %}
          {% else %}
            <div class="col-auto pt-1 pb-1">
              <div id="indicator-{{ forloop.index }}" data-target="#product-image-carousel" data-slide-to="{{ forloop.index | minus: 1 }}" class="indicator-size img-thumbnail
                  {% if forloop.index == 1 %}
                    active
                  {% endif %}">

                  {% comment %} if the image represents a youtube video, add a
                    'play' icon on top of image thumbnail. {% endcomment %}
                  {% if image.alt contains 'youtube' %}
                    <div class="h-100 w-100">
                    <div class="row h-100 w-100 align-items-center justify-content-center">
                      <div class="col-auto">
                      <i class="fas fa-play-circle text-light fa-2x"></i>
                      </div>
                    </div>
                    </div>
                  {% endif %}
              </div>
            </div>


            <style>
                #indicator-{{forloop.index}} {
                    background-image: url("{{ image.src | img_url: '72x' }}");
                    background-repeat: no-repeat;
                    background-position: center;
                    background-size: contain;
                    margin: 0px;
                }
            </style>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    {% comment %} Main Column 2 {% endcomment %}
    <div itemprop="offers" itemscope itemtype="http://schema.org/Offer" class="col-xs-12 col-md-6 p-0">
      <meta itemprop="priceCurrency" content="{{ shop.currency }}">
      <meta itemprop="price" content="{{ current_variant.price | divided_by: 100.00 }}">
      <link itemprop="availability" href="http://schema.org/{% if current_variant.available %}InStock{% else %}OutOfStock{% endif %}">

      {% comment %} Mobile Product description {% endcomment %}
      <div class="row d-md-none">
        <div class="col rte">
          {{ product.description }}
        </div>
      </div>

      {% comment %} Add to Cart Form {% endcomment %}
      <div class="row">
        <div class="col">
          <form action="/cart/add" method="post" enctype="multipart/form-data">
            <div class="row d-none d-md-block">
              <div class="col">
                <h3 class="font-weight-bold">{{ product.title }}</h3>
              </div>
            </div>
            <div class="row pt-4">
              <div class="col-xs-12 col-md-6 p-0 align-self-center">
                <div class="row">
                  <div class="col p-0 d-none d-md-block">
                    <h6 class="font-weight-bold">SKU: {{ current_variant.sku }}</h6>
                  </div>
                </div>

                {% comment %} Product variant selection groups {% endcomment %}
                <div class="row">
                  <div class="col p-0">
                    {% unless product.has_only_default_variant %}
                      {% for option in product.options_with_values %}
                        <div class="input-group input-group-sm pb-3 selector-wrapper js">
                          <div class="input-group-prepend">
                            <label class="input-group-text" for="SingleOptionSelector-{{ forloop.index0 }}">
                              <strong class="d-inline-block text-truncate mw-45px">{{ option.name }}</strong>
                            </label>
                          </div>
                          <select class="custom-select" id="SingleOptionSelector-{{ forloop.index0 }}"
                            data-single-option-selector
                            data-index="option{{ option.position }}">
                            {% for value in option.values %}
                              <option
                                value="{{ value | escape }}"
                                {% if option.selected_value == value %}selected="selected"{% endif %}>
                                  {{ value }}
                              </option>
                            {% endfor %}
                          </select>
                        </div>
                      {% endfor %}
                    {% endunless %}

                    <select name="id" class="no-js" data-product-select>
                      {% for variant in product.variants %}
                        <option
                          {% if variant == current_variant %}selected="selected"{% endif %}
                          {% unless variant.available %}disabled="disabled"{% endunless %}
                          value="{{ variant.id }}">
                            {{ variant.title }}
                        </option>
                      {% endfor %}
                    </select>
                  </div>
                </div>
                {% include 'quantity-input-group' %}
              </div>
              <div class="col-xs-12 col-md-5 offset-md-1 p-0">

                {% comment %} Product Price {% endcomment %}
                <div class="row pb-2">
                  <div class="col p-0">
                    <div data-price-wrapper>
                      <h2 data-product-price class="font-weight-bold text-center m-0">
                        {{ current_variant.price | money }}
                      </h2>

                      {% if product.compare_at_price_max > product.price %}
                      <div class="row justify-content-center">
                        <div class="col-auto p-0 pr-1">
                          <small class="text-secondary" data-compare-text>{{ 'products.product.regular_price' | t }}</small>
                        </div>
                        <div class="col-auto p-0">
                          <small class="text-secondary">
                            <s data-compare-price>
                              {% if current_variant.compare_at_price > current_variant.price %}
                                {{ current_variant.compare_at_price | money }}
                              {% endif %}
                            </s>
                          </small>
                        </div>
                      </div>
                      {% endif %}
                    </div>
                  </div>
                </div>

                {% comment %} Add to Cart Button {% endcomment %}
                <div class"row">
                  <div class="col p-0">
                    <button
                    type="submit"
                    name="add"
                    data-add-to-cart
                    {% unless current_variant.available %}disabled="disabled"{% endunless %}
                    class="btn btn-warning btn-block h-100 mh-72px"
                    style="border-radius: 0px;">
                      <span data-add-to-cart-text>
                        {% if current_variant.available %}
                          {{ 'products.product.add_to_cart' | t }}
                        {% else %}
                          {{ 'products.product.sold_out' | t }}
                        {% endif %}
                      </span>
                    </button>
                  </div>
                </div>
              </div>
            </div>



            
          </form>
        </div>
      </div>


      {% comment %} Desktop Product description {% endcomment %}
      <div class="row pt-3 d-none d-md-block">
        <div class="col rte">
          {{ product.description }}
        </div>
      </div>

    </div>
  </div>

  {% comment %} Product More Info Row {% endcomment %}
  {% assign isMoreInfoHidden = true %}
  <div class="row more-info-hidden border-top border-grey">
    <div class="col">
      <div class="row">
        <div class="col">
          <header class="section-header">
              <h4 class="font-weight-bold m-0 pt-3 pb-3">More Info</h4>
          </header>
        </div>
      </div>
      <div class="row justify-content-center">
          {% for image in product.images %}
            {% if image.alt contains 'isMoreInfo' %}
              {% if isMoreInfoHidden == true %}
                {% assign isMoreInfoHidden = false %}
              {% endif %}
              <a class="col-xs-12 col-md-4 p-0 pb-3 p-md-3" data-featherlight="#more-info-lightbox-{{forloop.index}}">
                <div href="#" id="more-info-{{ forloop.index }}" class="img-thumbnail
                    {% if forloop.index == 1 %}
                      active
                    {% endif %}">
                </div>
              </a>
              <style>
                  #more-info-{{forloop.index}} {
                      background-image: url("{{ image.src | img_url: '400x' }}");
                      background-repeat: no-repeat;
                      background-position: center;
                      background-size: contain;
                      margin: 0px;
                      height: 300px;
                  }
              </style>
              <div class="d-none">
                <div id="more-info-lightbox-{{forloop.index}}">
                  {{ image | img_tag: image.alt, '', '1024x' }}
                </div>
              </div>
            {% endif %}
          {% endfor %}
      </div>
    </div>
  </div>

  {% if isMoreInfoHidden == true %}
    <style>
      .more-info-hidden {
        display: none;
      }
    </style>
  {% endif %}


  {% comment %} Product Reviews Row {% endcomment %}
  <div class="row border-top border-grey">
    <div class="col">
      <div class="row">
        <div class="col">
          <header class="section-header">
              <h4 class="font-weight-bold m-0 pt-3 pb-3">Reviews</h4>
          </header>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="yotpo yotpo-main-widget" data-product-id="{{ product.id }}" data-name="{{ product.title | escape }}" data-url="{{ shop.url }}{{ product.url }}" data-image-url="{{ product.featured_image | product_img_url: "large" |replace: '?', '%3F' | replace: '&','%26'}}" data-description="{{ product.description | escape }}"></div>
        </div>
      </div>
  </div>

  {% unless product == empty %}
    <script type="application/json" data-product-json>
      {{ product | json }}
    </script>
  {% endunless %}
</section>

<style>
  .carousel-height {
    height: 512px;
  }
  
  .indicator-size {
    height: 96px;
    width: 96px;
  }

  @media screen and (max-width: 768px) {
    .carousel-height {
      height: 300px;
    }
    .indicator-size {
      height: 64px;
      width: 64px;
    }
  }


  .w-40 {
    width: 40%;
  }

  .mh-72px {
    max-height: 72px;
  }

  .mw-45px {
    max-width: 75px;
  }

</style>


{% schema %}
  {
    "name": "Product pages",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Show social sharing buttons",
        "default": true
      }
    ]
  }
{% endschema %}
